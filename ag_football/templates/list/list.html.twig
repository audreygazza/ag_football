{% extends 'base.html.twig' %}

{% block title %}V.H.F.{% endblock %}

{% block body %}
<h2>Liste des équipements</h2>

<table class="table table-hover col-lg-3 col-md-6 col-sm-8">
        <tr>
            <th>Désignation</th>
            <th>Quantité</th>

        </tr>
    {% for equipment in equipments | sort %}
            <tr>
                <td><a href="{{ path('list_infos', { 'id': equipment.id }) }}">{{ equipment.designation }}</a></td>
                <td>{{ equipment.quantity }}</td>
            </tr>
    {% endfor %}
</table>

{% endblock %}
